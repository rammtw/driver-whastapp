{
    "name": "rammtw/driver-whatsapp",
    "description": "WhatsApp driver for Botman.io",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ramil",
            "email": "rammtw@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "botman/botman": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\Drivers\\Whatsapp\\": "src/"
        }
    },
    "autoload-dev": {
